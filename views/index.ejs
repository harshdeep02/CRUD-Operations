<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>School Data</title>
    <link rel="stylesheet" href="../static/css/style.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Ubuntu&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="newStudents">
        <div class="head"><h1>Add New Students</h1></div>
    
        <form action="/" method="post" class="form">
    
        <label for="name" class="inputMain inp">Name :</label>
        <input type="text" class="input inputMain" name="name" value="" id="nameInp" placeholder="Enter your name" required><br>
    
        <label for="age" class="inputMain inp">Age :</label>
        <input type="text" class="input inputMain" name="age" value="" id="ageInp" placeholder="Enter your age" required><br>
    
        <label for="classs" class="inputMain inp">Class :</label>
        <input type="text" class="input inputMain" name="classs" value="" id="classInp" placeholder="Enter your class" required><br>
    
        <label for="rollNo" class="inputMain inp">Roll No :</label>
        <input type="text" class="input inputMain" name="rollNo" value="" id="rollNo" placeholder="Enter your roll no" required><br>
    
        <label for="address" class="inputMain inp">Address :</label>
        <input type="text" class="input inputMain" name="address" value="" id="addressInp" placeholder="Enter your address" required><br>
    
        <label for="pincode" class="inputMain inp">Pin Code :</label>
        <input type="text" class="input inputMain" name="pinCode" value="" id="pincodeInp" placeholder="Enter your pin code" required><br>
        <br><button class="btn">Submit</button>
        <!-- <input type="submit" class="btn" method> -->
        </form>
        </div>
    </div>
    <div class="container2">
        <div class="studentList">
        <div class="head2"><h1>List of Students</h1></div>
        <table class="table">
            <thead class="thead">
                <tr>
                    <th>No.</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Class</th>
                    <th>Roll No.</th>
                    <th>Adress</th>
                    <th>Pin Code</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% var i = 1 %>
                <%data.forEach((item)=>{%>
                    <tr>
                        <td><%= i++ %></td>
                        <td><%= item.name %></td>
                        <td><%= item.age %></td>
                        <td><%= item.classs %></td>
                        <td><%= item.rollNo %></td>
                        <td><%= item.address %></td>
                        <td><%= item.pinCode %></td>
                        <td>
                            <a href="/edit/<%= item._id%>"><i class="fa fa-pencil fa-solid fa-lg" style="color:green"></i></a>
                           <a href="/delete/<%= item._id%>"> <i class="fa fa-trash-o fa-solid fa-lg" style="color:red"></i></a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        </div>
    </div>
    <script src="https://kit.fontawesome.com/3b6f85da8b.js" crossorigin="anonymous"></script>
</body>
</html>